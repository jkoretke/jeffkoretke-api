# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to git!

# Environment Configuration
NODE_ENV=production
PORT=3000

# Security Configuration
HTTPS_ONLY=true
SESSION_SECRET=REPLACE_WITH_STRONG_RANDOM_STRING_MINIMUM_32_CHARS

# Email Configuration
# Use your actual email service credentials
EMAIL_USER=your-production-email@yourdomain.com
EMAIL_PASS=your-app-specific-password
EMAIL_TO=jeff@jeffkoretke.com

# API Configuration
API_VERSION=1.0.0

# CORS Configuration
# Add your actual production domains
CORS_ORIGIN=https://jeffkoretke.com,https://www.jeffkoretke.com

# Database Configuration
# Use your actual production MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/api.log

# Rate Limiting Configuration (stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CONTACT_RATE_LIMIT_MAX=3

