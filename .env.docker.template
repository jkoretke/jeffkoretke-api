# Docker Environment Variables Template
# Copy this file to .env.docker and fill in your values

# Application
NODE_ENV=production
PORT=3000

# Database (if using local MongoDB container)
MONGODB_URI=mongodb://admin:password123@mongodb:27017/jeffkoretke-api?authSource=admin

# Email Configuration
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-app-password

# Security
JWT_SECRET=your-super-secret-jwt-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# External Services
SENTRY_DSN=your-sentry-dsn-here

# CORS
ALLOWED_ORIGINS=https://jeffkoretke.com,https://www.jeffkoretke.com
